<html>
<head>
  <style type="text/css">
    div.topbar {
      height: 30px;
      background-color: #EEEEEE;
      position: absolute;
      left: 50px;
    }
    div.navigation{
      height: 30px;
      width: 600px;
      background-color:#EEEEEE;
      position: absolute;
      left: 50px;
      top: 50px;
    }

    .menuitem {
      width: 100px;
      height: 30px;
      float: left;
      margin-left: 10px;
      font-size: 110%
    }

    div.content {
      position: absolute;
      top: 80px;
      left: 50px;
    }

  </style>
</head>
<body>

<div class="topbar"></div>

<div class="navigation">
  <div class="menuitem"><a href="/"><b>Home</b></a></div>
  <div class="menuitem"><a href="/about">About</a></div>
  <% if $credentials %>
    <% if $credentials[0] != '' %>
      <div class="menuitem"><a href="/logout">Logout</a></div>
      <div class="menuitem"><a href="/profile">Profile</a></div>
    <% else %>
      <div class="menuitem"><a href="/login">Login</a></div>
    <% end %>
  <% else %>
    <div class="menuitem"><a href="/login">Login</a></div>
  <% end %>
  <br><br>
</div>

<div class="content">
<h1>Create account</h1><br>
<form action="/createaccount" method="post">
  Username:<input type="text" name="username"><br>
  Password:<input type="password" name="password"><br>
  <input type="submit" value="Create">
</form>
<p>Already have an account? <a href="/login">Login</a></p>
</div>